<h1>Bird Index</h1>

<% @birds.each do |bird| %>
  <table>
      <tr class="border_bottom">
        <td><a href="/birds/<%= bird.id %>"><%= bird.name %></a></td>
        <td><a href="/birds/<%= bird.id %>/edit">Update Bird</a></td>
        <td><%= button_to "Delete #{bird.name}", "/birds/#{bird.id}", method: :delete %></td>
      </tr>
      <% bird.attributes.each_pair do | key, value | %>
        <tr>
          <td><%= key %>: </td>
          <td><%= value %></td>
        </tr>
      <% end %>
  </table><br><br>
<% end %>

